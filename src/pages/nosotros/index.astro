---
import PageLayout from '@/layouts/layout.astro'
import { nosotrosMeta } from '@/config/meta/'
import { HeroSection } from '@/components'
import { AboutSectionAbout, VisionMissionSection, ValorsSection, VideoSection } from '@/features'
---

<PageLayout
  title={nosotrosMeta.title}
  description={nosotrosMeta.description}
  image={nosotrosMeta.image}
  canonical={nosotrosMeta.canonical}
>
  <HeroSection
    title="Nosotros"
    description="Estamos aquí para ayudarte. Agenda una consulta gratuita o contáctanos para cualquier duda legal."
    backgroundImage="https://images.unsplash.com/photo-1589391886645-d51941baf7fb?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80"
    primaryButton={{
      text: 'Nuestra Historia',
      href: '/nosotros/historia',
    }}
    secondaryButton={{
      text: 'Valores',
      href: '/nosotros/valores',
    }}
  />
  <VideoSection />
  <AboutSectionAbout />
  <VisionMissionSection />
  <ValorsSection />
</PageLayout>
