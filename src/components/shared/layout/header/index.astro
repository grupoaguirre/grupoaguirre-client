---
import { ROUTES } from '@/config/routes'
import { SearchModal } from '@/components/ui'
---

<nav class="border-neutral/20 w-full border-b bg-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center">
        <div class="flex items-center space-x-2">
          <a href={ROUTES.home}>
            <img src="/logo.png" alt="Logo" class="h-10" />
          </a>
        </div>
      </div>

      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a
            href={ROUTES.home}
            class="text-primary hover:text-neutral px-3 py-2 text-sm font-medium transition-colors"
          >
            Inicio
          </a>
          <a
            href={ROUTES.practiceAreas}
            class="text-primary hover:text-neutral px-3 py-2 text-sm font-medium transition-colors"
          >
            Áreas de Práctica
          </a>
          <a
            href={ROUTES.about}
            class="text-primary hover:text-neutral px-3 py-2 text-sm font-medium transition-colors"
          >
            Nosotros
          </a>
          <a
            href={ROUTES.resources}
            class="text-primary hover:text-neutral px-3 py-2 text-sm font-medium transition-colors"
          >
            Recursos
          </a>
          <a
            href={ROUTES.blog}
            class="text-primary hover:text-neutral px-3 py-2 text-sm font-medium transition-colors"
          >
            Blog
          </a>
        </div>
      </div>

      <div class="hidden items-center space-x-4 md:flex">
        <!-- Search Icon -->
        <button
          id="search-button"
          type="button"
          class="text-primary hover:text-neutral hover:bg-neutral/10 focus:ring-primary inline-flex items-center justify-center rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-offset-2"
          aria-label="Buscar en el sitio"
        >
          <svg
            class="h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </button>

        <a
          href={ROUTES.contact}
          class="bg-primary focus:ring-primary inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white transition-colors hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:pointer-events-none disabled:opacity-50"
        >
          Contacto
        </a>
      </div>

      <!-- Mobile-->
      <div class="flex items-center space-x-2 md:hidden">
        <button
          id="search-button-mobile"
          type="button"
          class="text-primary hover:text-neutral hover:bg-neutral/10 focus:ring-primary inline-flex items-center justify-center rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-offset-2"
          aria-label="Buscar en el sitio"
        >
          <svg
            class="h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </button>

        <button
          id="mobile-menu-button"
          type="button"
          class="text-primary hover:text-neutral hover:bg-neutral/10 focus:ring-primary inline-flex items-center justify-center rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-offset-2"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Abrir menú principal</span>
          <svg
            class="block h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <div class="hidden md:hidden" id="mobile-menu">
      <div class="space-y-1 px-2 pb-3 pt-2 sm:px-3">
        <a
          href={ROUTES.practiceAreas}
          class="text-primary hover:text-neutral block px-3 py-2 text-base font-medium"
        >
          Áreas de Práctica
        </a>
        <a
          href={ROUTES.about}
          class="text-primary hover:text-neutral block px-3 py-2 text-base font-medium"
        >
          Nosotros
        </a>
        <a
          href={ROUTES.resources}
          class="text-primary hover:text-neutral block px-3 py-2 text-base font-medium"
        >
          Recursos
        </a>
        <a
          href={ROUTES.blog}
          class="text-primary hover:text-neutral block px-3 py-2 text-base font-medium"
        >
          Blog
        </a>
        <a
          href={ROUTES.contact}
          class="text-primary hover:text-neutral block px-3 py-2 text-base font-medium"
        >
          Contacto
        </a>
      </div>
    </div>
  </div>
</nav>

<SearchModal client:load />

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button')
  const mobileMenu = document.getElementById('mobile-menu')

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true'
      mobileMenuButton.setAttribute('aria-expanded', (!isExpanded).toString())
      mobileMenu.classList.toggle('hidden')
    })
  }

  const searchButton = document.getElementById('search-button')
  const searchButtonMobile = document.getElementById('search-button-mobile')

  const openSearchModal = () => {
    window.dispatchEvent(new CustomEvent('openSearchModal'))
  }

  if (searchButton) {
    searchButton.addEventListener('click', openSearchModal)
  }

  if (searchButtonMobile) {
    searchButtonMobile.addEventListener('click', openSearchModal)
  }
</script>
